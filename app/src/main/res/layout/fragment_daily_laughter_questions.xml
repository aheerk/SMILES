<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Title -->

    <!-- Question 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Question -->
        <TextView
            style="@style/BodyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quest_laughter_a"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="61dp" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/icon_laughter_weblink_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:cropToPadding="false"
            app:srcCompat="@drawable/icon_external_link" />
    </LinearLayout>

    <!-- Input Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/icon_1a"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_single_border"
            android:text="@string/string_1" />

        <TextView
            android:id="@+id/icon_1b"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_single_border"
            android:text="@string/string_2" />

        <TextView
            android:id="@+id/icon_1c"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_single_border"
            android:text="@string/string_3" />

        <TextView
            android:id="@+id/icon_1d"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_single_border"
            android:text="@string/string_4" />

        <TextView
            android:id="@+id/icon_1e"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_single_border"
            android:text="@string/string_5" />

    </LinearLayout>

    <!-- Score Button -->
    <Button
        android:id="@+id/score_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/quest_button"
        android:textAlignment="center" />

    <!-- Result Icon -->
    <TextView
        android:id="@+id/text_score"
        style="@style/NotificationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:id="@+id/text_laughter_feedback"
        style="@style/BodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_laughter_feedback"
        android:visibility="invisible" />

</LinearLayout>
