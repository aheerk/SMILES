<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_score_date"
            style="@style/BodyTextNoMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 12th, 2019" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_item_score_sleep"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_sleep" />

            <ImageView
                android:id="@+id/list_item_score_movement"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_movement" />

            <ImageView
                android:id="@+id/list_item_score_imagination"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_imagination" />

            <ImageView
                android:id="@+id/list_item_score_life_satisfaction"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_life_satisfaction" />

            <ImageView
                android:id="@+id/list_item_score_eating"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_eating" />

            <ImageView
                android:id="@+id/list_item_score_speaking"
                android:layout_width="@dimen/input_icons_width"
                android:layout_height="@dimen/input_icons_height"
                android:layout_gravity="left|top"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_image_no_data"
                android:cropToPadding="true"
                android:padding="@dimen/input_icons_padding"
                app:srcCompat="@drawable/icon_speaking" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>