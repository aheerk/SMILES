<resources>


    <style name="AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/colorWhite</item>


    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/sonika_italic</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="BodyTextNoMargin" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBodyText</item>
    </style>

    <!-- For List Items -->
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/sonika_italic</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Heading1Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:fontFamily">@font/sonika_italic</item>
    </style>

    <style name="Heading2Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSubtitleText</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="NotificationText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputIcons">
        <item name="android:layout_width">@dimen/input_icons_width</item>
        <item name="android:layout_height">@dimen/input_icons_height</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">@dimen/input_icons_padding</item>
        <item name="android:cropToPadding">true</item>
    </style>

</resources>
